{{#each projects as |project|}}
  <div class="container">
    <div class="row">
      <div class="col">

        <h2 class="project">
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->

          <a href="/project/{{project.id}}">{{project.name}}</a>
        </h2>

        <p>Project Owner: {{project.user.name}} </p>
        <p>Description: {{description}}</p>
        <p>Role Needed: {{roleNeeded}}</p>
        <p>Project Created: {{format_date project.date_created}}</p>

      </div>
    </div>
  </div>
{{/each}}